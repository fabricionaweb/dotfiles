#!/bin/sh

# Utils :::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::

# Clear all branches at git
alias clear_branches="git branch | grep -v master | xargs git branch -D"
alias delete_branches=clear_branches
alias reset_branches=clear_branches

# NPX
# Starts a server
alias server="npx http-server"

# Kill process using a given port
kill-port() {
  port=$1
  npx kill-port $port
}

# Finds a package tracked by Correios
cade-meu-pacote() {
  # Docs: https://postmon.com.br/
  pacote=$1
  curl "http://api.postmon.com.br/v1/rastreio/ect/$pacote" | fx
}

# Open file by typing chrome "filename" at terminal
alias google-chrome="open -a \"Google Chrome\""
alias chrome=google-chrome

# Macbook aliases
# alias lock="/System/Library/CoreServices/Menu\ Extras/user.menu/Contents/Resources/CGSession -suspend"
alias sleep="pmset displaysleepnow"
alias lock=sleep
