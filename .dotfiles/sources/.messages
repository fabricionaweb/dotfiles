#!/bin/sh

##################
# Code # Color   #
##################
#  00  # Off     #
#  30  # Black   #
#  31  # Red     #
#  32  # Green   #
#  33  # Yellow  #
#  34  # Blue    #
#  35  # Magenta #
#  36  # Cyan    #
#  37  # White   #
##################

# Defaults
echo_arrow() { echo "\033[1;32m=> $1\033[0m"; }
echo_default() { echo "\033[0;36m$1\033[0m"; }

# When checking/installing/updating
echo_alert() { echo "\033[1;31m[alert] ✖ $1 ✖\033[0m"; }
echo_check() { echo "\033[1;32m[ok] $1 ✔\033[0m"; }
echo_update() { echo "\033[1;33m[update] $1 \033[0m"; }
echo_installing() { echo "\033[1;33m[installing] $1 \033[0m"; }
echo_installed() { echo "\033[1;32m[installed] $1 ✔\033[0m"; }
