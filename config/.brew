#!/bin/sh
source '.dotfiles/sources/.messages'

# Setup Brew (https://brew.sh/) and Brew Cask (http://caskroom.io/) apps ::::::::::::::::::::::::::::::::::::::::::::::

# Brew ::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
echo_arrow "Setting up Homebrew"
if test ! $(which brew); then
  echo_installing "Installing homebrew"
  /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
else
  echo_ok "Homebrew already instaled"
  echo_update "Updating Homebrew"
  brew update
fi

# Brew tap ::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
echo_arrow "Tapping repos with brew"
taps=(
  "cjbassi/gotop"
)

for tap in "${taps[@]}"; do
  echo_default "Tapping $tap"
  brew tap $tap
done

# Brew apps :::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
echo_arrow "Installing apps with brew"
brew=(
  "nvm"
  "thefuck"
  "gotop"
  "fx"
  "git"
  "hub"
  "cmatrix"
  "zsh"
  "z"
)

# Custom configuration for brew apps ::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
nvm_configuration() {
  source $(brew --prefix nvm)/nvm.sh

  nvm install node
  nvm alias default node

  packages=(
    "tslide"
  )

  for package in "${packages[@]}"; do
    echo_installing "Installing $package"
    npm i -g $package
  done
}

check_extra_configurations() {
  echo_installing "Checking extra configuration for $1"

  case $1 in
      "nvm")
        nvm_configuration
      ;;
      *)
        echo_default "No extra configuration for $app"
      ;;
  esac
}

for app in "${brew[@]}"; do
  echo_installing "Installing $app"
  brew install $app

  check_extra_configurations $app
  echo_installed "$app installed"
done

#  Brew Cask ::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
echo_arrow "Installing apps with brew cask"
brew cask

#  Brew Cask apps :::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
cask=(
  "visual-studio-code"
  "iterm2"
  "gitkraken"
  "docker"
  "google-chrome"
  "insomnia"
  "postman"
  "firefox"
  "spotify"
  "stremio"
  "slack"
  "skype"
  "coconutbattery"
  "1password"
  "flume"
)

for app in "${cask[@]}"; do
  echo_installing "Installing $app"
  brew cask install $app
done